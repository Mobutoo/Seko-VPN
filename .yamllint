---
extends: default

rules:
  line-length:
    max: 200
    level: warning
  truthy:
    allowed-values: ["true", "false", "yes", "no", "on"]
  comments:
    min-spaces-from-content: 1
    level: warning
  comments-indentation:
    level: warning
  document-start:
    present: true
    level: warning
  indentation:
    spaces: 2
    indent-sequences: true
  braces:
    max-spaces-inside: 1
    level: warning

ignore:
  - .venv/
  - .venv-ci/
  - .molecule/
  - "*.tar.gz"
