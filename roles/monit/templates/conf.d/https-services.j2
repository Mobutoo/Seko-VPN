# Géré par Ansible - NE PAS MODIFIER MANUELLEMENT
# ============================================================

{% for svc in monit_https_checks %}
check host {{ svc.name }}_https with address {{ svc.url }}
  if failed
    port 443
    protocol https
    request "/"
    with timeout 15 seconds
    for 3 cycles
  then exec "/etc/monit/scripts/telegram-alert.sh"
  group https

{% endfor %}
