# docker-compose.yml Uptime Kuma — Géré par Ansible
services:
  uptime-kuma:
    image: "louislam/uptime-kuma:{{ uptime_kuma_version }}"
    container_name: uptime-kuma
    restart: unless-stopped
    expose:
      - "3001"
    ports:
      - "127.0.0.1:3001:3001"
    volumes:
      - uptime-kuma-data:/app/data
    networks:
      - proxy-net

networks:
  proxy-net:
    external: true

volumes:
  uptime-kuma-data:
