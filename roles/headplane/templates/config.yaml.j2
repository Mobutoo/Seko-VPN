---
# ============================================================
# Configuration Headplane (Web UI pour Headscale)
# Géré par Ansible - NE PAS MODIFIER MANUELLEMENT
# ============================================================

server:
  host: "0.0.0.0"
  port: 3000
  base_url: "https://{{ domain_headplane }}"
  cookie_secret: "{{ vault_headplane_cookie_secret }}"
  cookie_secure: true
  cookie_max_age: 86400
  data_path: "/var/lib/headplane"

headscale:
  url: "http://headscale:8080"
  public_url: "https://{{ domain_headscale }}"
  config_path: "/etc/headscale/config.yaml"
  config_strict: true

integration:
  docker:
    enabled: true
