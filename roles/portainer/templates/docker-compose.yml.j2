---
# Docker Compose - Portainer CE (supervision Docker)
# Géré par Ansible - NE PAS MODIFIER MANUELLEMENT

services:
  portainer:
    image: portainer/portainer-ce:{{ portainer_version }}
    container_name: portainer
    restart: unless-stopped
    volumes:
      # Socket Docker en lecture-écriture (OBLIGATOIRE pour l'environnement local)
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ portainer_data_path }}/data:/data
    expose:
      - "9000"
    networks:
      - {{ docker_network_name }}
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '0.5'

networks:
  {{ docker_network_name }}:
    external: true
