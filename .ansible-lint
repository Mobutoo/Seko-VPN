---
# ============================================================
# .ansible-lint — Profil production + skips ciblés
# ============================================================
profile: production

skip_list:
  - var-naming[no-role-prefix]
  - command-instead-of-module

warn_list:
  - name[template]

exclude_paths:
  - .venv/
  - .molecule/
  - .git/
  - tests/
